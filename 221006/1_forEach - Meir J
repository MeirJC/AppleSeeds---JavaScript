//? 1.3-Fruits
// You are given this array of fruits:

const fruits = ['mango', 'papaya', 'pineapple', 'apple'];
const vowls = [a,e,i,o,u]
function fruitsLog(arr){
  arr.forEach(m => m !=="apple" {console.log(`I am eating a ${m}`)})
}
fruitsLog(fruits)

